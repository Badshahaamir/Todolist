<%-include("header")-%>

    <body>
        <div class="box" id="heading">
            <h1>
                <%=listTitle%>
            </h1>
        </div>

        <div class="box">

            <% for(let i=0; i<newaddlist.length; i++){ %>
                <form action="/delete" method="post">
                    <div class="item">
                        <input type="checkbox" name="checkbox" value="<%=newaddlist[i]._id%>" onchange="this.form.submit()">
                        <p>
                            <%= newaddlist[i].name %>
                        </p>
                    </div>
                    <input type="hidden" name="hiddenInput" value="<%=listTitle%>">
                </form>
                <% }%>

                    <form action="/" method="post" class="item">
                        <input type="text" name="newitem" placeholder="New Item" autocomplete="off">
                        <button type="submit" name="list" value=<%=listTitle%> >+</button>
                    </form>
    </body>

    </div>

    <%-include("footer")-%>